<div id="header">
  <nav class="navbar navbar-default navbar-fixed-top">

    <div class="container-fluid">
      <div class="">
        <div class="col-md-4">
          <a href="#vehicles" class="back btn">
            <i class="fa fa-chevron-left"></i>
          </a>
          <a href="#" class="js-name btn btn-default">
            {{name}}
          </a>
          <a href="#" class="js-settings btn btn-default">
            Settings
          </a>
        </div>
        <div class="col-sm-4 hidden-sm hidden-xs">
          <form class="navbar-form">
            <input type="search" name="filter" id="filter" class="form-control text-center"
              placeholder="Search">
          </form>
        </div>
        <div class="col-sm-4 hidden-sm hidden-xs">
          <nav class="pull-right">
            <a href="#" class="js-vehicles btn btn-default">
              Vehicles
            </a>

            {{view sessionView}}
          </nav>
        </div>
      </div>
    </div>

  </nav>
</div>

<div class="container action-bar">
  <div class="row">
    <div class="col-sm-6">
      <nav>
        <a href="#" class="js-add-service btn btn-secondary">
          + Add Service
        </a>
        <a href="#" class="js-add-reminder btn btn-secondary">
          + Add Reminder
        </a>
      </nav>
    </div>

    <div class="col-sm-6">
      <div class="row text-right text-muted">
        <div class="col-md-6">
          {{#if vin}}
            <p>
              VIN: {{vin}}
            </p>
          {{/if}}
        </div>

        {{#if milesPerYear}}
          <div class="col-md-6">
            <p>
              You drive about {{formatNumber '0,000' milesPerYear}} miles a year
            </p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div id="main">
  <div class="container">
    {{#any recordsView.records}}
      <div class="row">
        <div class="col-sm-4">
          {{view remindersView}}
        </div>
        <div class="col-sm-4">
          <h5 class="text-muted">
            <span class="fa fa-wrench fa-fw"></span>
            Recommended Maintenance
          </h5>
          <ul class="list-unstyled">
            {{#each nextActions}}
              <li>
                {{action}} {{item}} {{inNextDuration}}
              </li>
            {{else}}
              <span class="text-muted">All good!</span>
            {{/each}}
          </ul>
        </div>
        <div class="col-sm-4">
          <h5 class="text-muted">
            <i class="fa fa-book fa-fw"></i>
            Vehicle Notes
          </h5>

          <div id="vehicle-notes">
            {{{markdown notes}}}
            <a href="#" class="js-edit-vehicle-notes">Edit</a>
          </div>
        </div>
      </div>
    {{/any}}
    {{view recordsView}}
  </div>
</div>
