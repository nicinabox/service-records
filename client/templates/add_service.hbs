<form action="">
  <div class="form-group">
    <label class="control-label" for="date">Date</label>
    <input type="date" name="date" class="form-control" value="{{today}}">
  </div>

  <div class="form-group">
    <label class="control-label" for="mileage">Mileage</label>
    <input type="text" name="mileage" class="form-control"
      value="{{currentEstimatedMileage}}" placeholder="E.g., 13500">
    {{#if currentEstimatedMileage}}
      <small class="help-block">
        We tried to estimate your current mileage.
      </small>
    {{/if}}
  </div>

  {{#if settings.enableCost}}
    <div class="form-group">
      <label class="control-label" for="cost">Cost</label>
      <input type="number" name="cost" class="form-control"
        placeholder="E.g., 40">
    </div>
  {{/if}}

  <div class="form-group">
    <label class="control-label" for="notes">Notes</label>
    <textarea name="notes" class="form-control"
      placeholder="E.g., Change oil, oil filter"></textarea>
  </div>

  <input type="hidden" name="vehicle_id" value={{_id}}>
  <button class="btn btn-success">Save</button>
</form>
