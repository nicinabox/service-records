<form action="">
  <div class="form-group">
    <label class="control-label" for="date">Date</label>
    <input type="date" name="date" class="form-control" value="{{today}}">
  </div>

  <div class="form-group">
    <label class="control-label" for="mileage">Mileage</label>
    <input type="mileage" name="mileage" class="form-control"
      placeholder="E.g., 13,500">
  </div>

  <div class="form-group">
    <label class="control-label" for="notes">Notes</label>
    <textarea name="notes" class="form-control"
      placeholder="E.g., Change oil, oil filter"></textarea>
  </div>

  <input type="hidden" name="vehicle_id" value={{id}}>
  <button class="btn btn-success">Save</button>
</form>
